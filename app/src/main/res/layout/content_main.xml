<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.paxilpaz.countdowntimer.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/period_timer"
        android:backgroundTint="@color/black"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colon"
            android:src="@drawable/colon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:tint="@color/green"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tens_seconds_period"
            android:src="@drawable/digit_0"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/colon"
            android:layout_margin="8dp"
            android:tint="@color/green"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seconds_period"
            android:src="@drawable/digit_0"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tens_seconds_period"
            android:layout_margin="8dp"
            android:tint="@color/green"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutes"
            android:src="@drawable/digit_0"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/colon"
            android:layout_margin="8dp"
            android:tint="@color/green"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tens_minutes"
            android:src="@drawable/digit_1"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@id/minutes"
            android:layout_margin="8dp"
            android:tint="@color/green"/>


    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_timer"
        android:backgroundTint="@color/black"
        android:background="@color/black" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:src="@drawable/dot"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:tint="@color/red"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenth_of_seconds"
            android:src="@drawable/digit_0"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dot"
            android:layout_margin="8dp"
            android:tint="@color/red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seconds_action"
            android:src="@drawable/digit_4"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/dot"
            android:layout_margin="8dp"
            android:tint="@color/red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tens_seconds_action"
            android:src="@drawable/digit_2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@+id/seconds_action"
            android:layout_margin="8dp"
            android:tint="@color/red" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/timer_buttons">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/pause_resume_button"
            android:src="@drawable/start"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:layout_weight="0.25"
            android:layout_marginTop="3dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/reset_24_button"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/reset_24"
            android:nestedScrollingEnabled="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:scaleType="centerInside"
            android:layout_marginTop="3dp"
            android:layout_weight="0.25"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/reset_14_button"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/reset_14"
            android:nestedScrollingEnabled="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:scaleType="centerInside"
            android:layout_marginTop="3dp"
            android:layout_weight="0.25"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/stop"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/stop"
            android:nestedScrollingEnabled="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:scaleType="centerInside"
            android:layout_marginTop="3dp"
            android:layout_weight="0.25"
            android:tint="@android:color/darker_gray" />
    </LinearLayout>

</LinearLayout>
